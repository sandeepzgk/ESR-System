{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "npm",
            "script": "install",
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        },
        {
            "label": "Run React App",
            "type": "npm",
            "script": "start",
            "dependsOn": "Install Dependencies",
            "problemMatcher": [
                "$eslint-stylish" // Adjust or remove if not configured
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        }
    ]
}