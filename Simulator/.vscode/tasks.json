{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "npm",
            "script": "install",
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        },
        {
            "label": "Run React App",
            "type": "npm",
            "script": "start",
            "dependsOn": "Install Dependencies",
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting the development server",
                    "endsPattern": "(Compiled successfully|Failed to compile|Compiled with warnings)"
                }
            },
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        }
    ]
}